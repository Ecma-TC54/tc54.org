---
export interface StandardCardProps {
    imgSrc: string;
    name: string;
    edition: string;
    publicationDate: string;
    link: string;
}

const {
    imgSrc,
    name,
    edition,
    publicationDate,
    link
} = Astro.props as StandardCardProps;
---

<a href={link} class="block card bg-white shadow-lg rounded-lg overflow-hidden">
    <img src={imgSrc} alt={name} class="w-full h-48 object-cover">
    <div class="p-4">
        <h3 class="text-xl font-semibold underline text-blue-600">{name}</h3>
        <p class="text-gray-600">Edition: {edition}</p>
        <p class="text-gray-600">Publication Date: {publicationDate}</p>
    </div>
</a>

<style>
    .card {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s;
        text-decoration: none;
    }
    .card:hover {
        transform: translateY(-10px);
    }
    .card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .card .p-4 {
        padding: 1rem;
    }
    .card h3 {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    .card p {
        font-size: 0.875rem;
        color: #4a5568;
        margin: 0.25rem 0;
    }
</style>
